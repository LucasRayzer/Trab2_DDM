<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho02.Pages.ProgressReportPage"
              Title="Progress Report">
    <StackLayout Padding="20">
        <Label Text="Project Progress Report" FontSize="Large" />
        <ProgressBar Progress="{Binding ProjectCompletionRate}" />
        <Label Text="{Binding ProjectCompletionPercentage, StringFormat='Project completion: {0:P}'}" />
        <!-- Outros gráficos e relatórios podem ser adicionados aqui -->
    </StackLayout>
</ContentPage>
