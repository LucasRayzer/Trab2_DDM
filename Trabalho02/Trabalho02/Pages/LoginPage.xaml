<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho02.Pages.LoginPage"
               Title="Página Inicial">
    
    <StackLayout Padding="20" Spacing="10" >
        <Entry Placeholder="Username" x:Name="UsernameEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry"/>
        <Button  Padding="10" Text="Login" Clicked="OnLoginClicked"  BackgroundColor="#007ACC"/>
        <Button Padding="10" Text="Register" Clicked="OnRegisterClicked" BackgroundColor="Aqua"/>
    </StackLayout>
</ContentPage>
