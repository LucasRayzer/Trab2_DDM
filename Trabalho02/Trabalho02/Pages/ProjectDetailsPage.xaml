<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho02.Pages.ProjectDetailsPage"
             Title="Project Details">
    <StackLayout Padding="20">
        <Label Text="{Binding Project.Name}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Project.Description}" FontSize="14" />

        <ListView x:Name="TasksListView" 
                  ItemsSource="{Binding Tasks}" 
                  ItemSelected="OnTaskSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding ProgressStatus}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Task" Clicked="OnAddTaskClicked"/>
    </StackLayout>
</ContentPage>
