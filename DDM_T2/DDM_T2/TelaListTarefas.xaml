<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           Title="Minhas Tarefas">
    <StackLayout Padding="10">
        <ListView x:Name="TarefasListView" ItemsSource="{Binding Tarefas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Titulo}" VerticalOptions="Center" />
                            <Switch IsToggled="{Binding Concluida}" HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Adicionar Tarefa" Command="{Binding AddTarefaCommand}" />
    </StackLayout>

</ContentPage>
