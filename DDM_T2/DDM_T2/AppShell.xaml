<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DDM_T2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DDM_T2"
    Shell.FlyoutBehavior="Disabled"
    Title="DDM_T2">

    <!-- Define rotas de navegação -->
    <ShellContent Title="Tarefas" ContentTemplate="{DataTemplate local:ListaTarefasViewModel}" Route="ListaTarefasPage" />
    <ShellContent Title="Hábitos" ContentTemplate="{DataTemplate local:ControleHabitosVM}" Route="ControleHabitosPage" />
    <ShellContent Title="Estatísticas" ContentTemplate="{DataTemplate local:TelaEstatVM}" Route="EstatisticasPage" />

    <!-- Página de cadastro de tarefas e hábitos como rota secundária -->
    <ShellContent Title="Cadastro de Tarefa" Route="CadastroTarefaPage" ContentTemplate="{DataTemplate local:CadastroTarefaPage}" />

</Shell>
